<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulMarino"
    tools:context=".Registrarse">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="310dp"
        android:layout_height="523dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtIngreseEmailR"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bordetexto"
            android:ems="10"
            android:hint="Ingrese un Email"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/textoTituloGris"
            android:textColorHint="@color/textoTituloGris" />

        <EditText
            android:id="@+id/txtIngresePasswordR"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bordetexto"
            android:ems="10"
            android:hint="Ingrese una Contraseña"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/textoTituloGris"
            android:textColorHint="@color/textoTituloGris" />

        <EditText
            android:id="@+id/txtConfirmarPR"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bordetexto"
            android:ems="10"
            android:hint="Confirme Contraseña"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/textoTituloGris"
            android:textColorHint="@color/textoTituloGris" />

        <Button
            android:id="@+id/btnRegistrarseR"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bordeboton"
            android:onClick="registrarUsuario"
            android:text="Registrarse"
            android:textColor="@color/azulBrillante" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoxyz" />
</androidx.constraintlayout.widget.ConstraintLayout>