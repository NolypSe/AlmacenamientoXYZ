<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azulMarino"
    android:backgroundTint="@color/azulMarino"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesolo"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#ff000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtNombreArticulo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nombre"
            android:textColor="@color/textoTituloGris"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecioArticulo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNombreArticulo"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="-34dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Precio"
            android:textAlignment="center"
            android:textColor="@color/textoTituloGris"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStockArticulo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPrecioArticulo"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="52dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Stock"
            android:textAlignment="center"
            android:textColor="@color/textoTituloGris"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCategoriaArticulo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtStockArticulo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-34dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Categoria"
            android:textColor="@color/textoTituloGris"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCategoriaArticulo"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnEditar"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bordeboton"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@color/azulBrillante" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bordeboton"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="@color/azulBrillante" />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>